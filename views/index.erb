<div class="row">
  <div class="col-md-12">
    <h1>My Recipe Box!</h1>
    <form action="/recipes/new" method="post">
      <div class="form-group">
        <label for="recipe_name">Add a recipe:</label>
        <input class="form-control" type="text" name="recipe_name">
      </div>
      <div class="form-group">
        <button class="btn btn-success" type="submit" name="button">Submit</button>
      </div>
    </form>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <h1>All Categories</h1>
    <% if @tags %>
      <ul>
      <% @tags.each do | tag |  %>
        <li><a href="/tags/<%= tag.id %>"><%= tag.name %></a></li>
      <% end %>
      </ul>
    <% end %>
  </div>
  <div class="col-md-4">
    <h1>All Saved Recipes</h1>
    <% if @recipes %>
      <ul>
      <% @recipes.each do | recipe |  %>
        <li><a href="/recipes/<%= recipe.id %>"><%= recipe.name %></a></li>
      <% end %>
      </ul>
    <% end %>
  </div>
  <div class="col-md-4">
    <h1>All Ingredients</h1>
    <% if @ingredients %>
      <ul>
      <% @ingredients.each do | ingredient |  %>
        <li><a href="/ingredients/<%= ingredient.id %>"><%= ingredient.name %></a></li>
      <% end %>
      </ul>
    <% end %>
  </div>
</div>
